{
    "annotations": {
        "list": []
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "id": null,
    "links": [],
    "liveNow": true,
    "panels": [
        {
            "title": "Request Overview",
            "type": "row",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 0
            },
            "collapsed": false
        },
        {
            "title": "Request Rate (per second)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 1
            },
            "targets": [
                {
                    "expr": "rate(mcp_requests_total[1m])",
                    "legendFormat": "{{tool}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "fillOpacity": 20,
                        "lineWidth": 2
                    },
                    "unit": "reqps"
                }
            },
            "options": {
                "legend": {
                    "displayMode": "table",
                    "placement": "right",
                    "calcs": [
                        "mean",
                        "max"
                    ]
                }
            }
        },
        {
            "title": "Request Latency (p95)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 1
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, rate(mcp_request_latency_seconds_bucket[5m]))",
                    "legendFormat": "{{tool}} p95"
                },
                {
                    "expr": "histogram_quantile(0.50, rate(mcp_request_latency_seconds_bucket[5m]))",
                    "legendFormat": "{{tool}} p50"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "color": {
                        "mode": "palette-classic"
                    },
                    "custom": {
                        "lineWidth": 2
                    },
                    "unit": "s",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 0.5
                            },
                            {
                                "color": "red",
                                "value": 2
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Error Rate",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 4,
                "x": 0,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum(rate(mcp_requests_failed_total[5m])) / sum(rate(mcp_requests_total[5m])) * 100",
                    "legendFormat": "Error %"
                }
            ],
            "options": {
                "colorMode": "value",
                "graphMode": "area"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 1
                            },
                            {
                                "color": "red",
                                "value": 5
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Requests Denied",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 4,
                "x": 4,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum(increase(mcp_requests_denied_total[1h]))",
                    "legendFormat": "Denied"
                }
            ],
            "options": {
                "colorMode": "value"
            },
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 50
                            },
                            {
                                "color": "red",
                                "value": 200
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Active Connections",
            "type": "gauge",
            "gridPos": {
                "h": 4,
                "w": 4,
                "x": 8,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum(mcp_active_requests)",
                    "legendFormat": "Active"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 50
                            },
                            {
                                "color": "red",
                                "value": 80
                            }
                        ]
                    }
                }
            }
        },
        {
            "title": "Rate Limit Status",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 4,
                "x": 12,
                "y": 9
            },
            "targets": [
                {
                    "expr": "sum(increase(mcp_rate_limited_total[1h]))",
